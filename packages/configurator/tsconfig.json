{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "rootDir": ".",
    "target": "ES2020",
    "module": "ES2020",
    "types": ["jest", "codeceptjs", "w3c-web-serial"],
    "noEmit": true
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.json",
    "src/**/__generated__/**/*.d.ts",
    "stories/**/*.tsx",
    "stories/**/*.ts",
    "e2e/**/*.ts",
    "__mocks__/**/*.ts",
    "__mocks__/**/*.tsx",
    "*.d.ts",
    "e2e/*.d.ts",
    ".storybook/*.ts",
    ".storybook/*.tsx",
    ".jest/*.ts",
    "package.json"
  ],
  "ts-node": {
    "files": true
  },
  "references": [
    {
      "path": "../msp/tsconfig.build.json"
    },
    {
      "path": "../api/tsconfig.build.json"
    },
    {
      "path": "../api-server/tsconfig.build.json"
    },
    {
      "path": "../api-graph/tsconfig.build.json"
    }
  ]
}
