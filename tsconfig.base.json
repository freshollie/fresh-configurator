{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2015",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@betaflight/*": ["./packages/*/src"]
    },
    "composite": true
  },
  "exclude": ["/node_modules/", "/dist/"]
}
